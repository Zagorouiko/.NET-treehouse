@model ComicBookGallery.Models.ComicBook

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@Model.DisplayText</title>
</head>
<body>
    <h1>@Model.SeriesTitle</h1>
    <h2>Issue #@Model.IssueNumber</h2>
    <h3>@Html.Raw(Model.DescriptionHtml)</h3>
    <div>
        @if (Model.Artists.Length > 0)
        {
        <h5>Artists:</h5>
        <ul>
            @foreach (var artist in @Model.Artists)
            {
                <li>@artist.Name: @artist.Role</li>
            }
        </ul>
        }
    </div>

</body>
</html>
