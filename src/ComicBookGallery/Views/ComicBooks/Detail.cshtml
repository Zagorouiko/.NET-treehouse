@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <h1>@ViewBag.SeriesTitle</h1>
    <h2>Issue #@ViewBag.IssueNumber</h2>
    <h3>@Html.Raw(@ViewBag.description)</h3>
    <div>
        @if (@ViewBag.Artists.Length > 0)
        {
        <h5>Artists:</h5>
        <ul>
            @foreach (var artist in @ViewBag.Artists)
            {
                <li>@artist</li>
            }
        </ul>
        }
    </div>

</body>
</html>
